<div class="modal fade" id="options_modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
        <div class="modal-title"><%= icon('cog') %> Opções</div> 
      </div>
      <div class="modal-body">
        <%= simple_form_for(@event, html: { class: 'horizontal-form '}) do |f| %>
          <%= f.input :top_margin, label: "Distância do topo: <br/>".html_safe %>
          <%= f.input :bg, as: :image_preview, label:"Imagem de fundo: ", input_html: {preview_version: :thumb} %>
          
          <%= f.submit "Salvar", class: "btn btn-primary" %>
          <%= button_tag "Voltar",data: { dismiss: "modal"}, class: "btn btn-default" %>
        <% end %>      
      </div>
    </div>
  </div>
  
</div>    
