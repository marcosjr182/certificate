<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <%= @event.name %> - Lista de Alunos
        <%= link_to "Gerar PDF", event_students_path(@event, format:"pdf"), class: 'btn btn-sm btn-primary pull-right' %>
      </div>  
      
      <%= render partial: "form", locals: {event: @event, student: @student} %>

        <table class="table table-striped panel-body">
          
          <% @students.each do |student| %>
              <tr class="clearfix">
                <td class="col-md-8"><%= student.name %></td>
                <td class="col-md-4 text-right">
                  <%= link_to 'Editar', edit_event_student_path(@event,student), class: 'btn btn-sm btn-default' %>
                  <%= link_to 'Excluir', [@event,student], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          
        </table>    

    </div>
  </div>
</div>    
